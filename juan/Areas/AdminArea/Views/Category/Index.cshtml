@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <div class="col-lg-12">
                    <a class="btn btn-success" asp-action="Create">CreateCategory</a>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Category name
                                </th>
                                <th>
                                    Delete
                                </th>
                                <th>
                                    Update
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @category.Name
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.ID"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@category.ID"><i class="mdi mdi-lead-pencil"></i></a>
                                    </td>

                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>